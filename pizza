<script>
const pizzas=[{name:"××¨×’×¨×™×˜×”",price:36},{name:"×‘×¦×œ",price:46},{name:"×˜×‘×¢×•× ×™×ª",price:42},{name:"×¤×¤×¨×•× ×™",price:50},{name:"×©××¤×™× ×™×•×Ÿ",price:48}]
const sizes=[{name:"×§×˜×Ÿ",add:0},{name:"×‘×™× ×•× ×™",add:12},{name:"×’×“×•×œ",add:22}]
const extras=[{name:"×’×‘×™× ×” × ×•×¡×¤×ª",price:5},{name:"×–×™×ª×™×",price:4},{name:"×¤×˜×¨×™×•×ª",price:6},{name:"×‘×¦×œ",price:3},{name:"×¢×’×‘× ×™×•×ª",price:4},{name:"×©×•× ×§×•× ×¤×™",price:5}]
let selectedPizza=null,selectedSize=null,selectedExtras=[],cart=[],orderHistory=[],isStaff=false,orderNumber=1,currentUser=null,users=JSON.parse(localStorage.getItem('pizzaUsers'))||[],orders=JSON.parse(localStorage.getItem('pizzaOrders'))||[]
function init(){
if(orders.length>0){
orderHistory=orders
orderNumber=orderHistory.reduce((max,o)=>Math.max(max,o.num),0)+1
}
}
function createLists(){
let p="",s="",e=""
pizzas.forEach((pizz,i)=>p+=`<div class="card"><input type="radio" name="pizza" value="${i}" onchange="selectPizza(${i})">${pizz.name}<br>${pizz.price} â‚ª</div>`)
sizes.forEach((sz,i)=>s+=`<div class="card"><input type="radio" name="size" value="${i}" onchange="selectSize(${i})">${sz.name}<br>${sz.add>0?`(+${sz.add} â‚ª)`:""}</div>`)
extras.forEach((ex,i)=>e+=`<div class="card"><input type="checkbox" value="${i}" onchange="toggleExtra(${i})">${ex.name}<br>(+${ex.price} â‚ª)</div>`)
document.getElementById("pizzaList").innerHTML=p
document.getElementById("sizeList").innerHTML=s
document.getElementById("extrasList").innerHTML=e
}
function selectPizza(i){selectedPizza=pizzas[i];updateTotal()}
function selectSize(i){selectedSize=sizes[i];updateTotal()}
function toggleExtra(i){const ex=extras[i];selectedExtras.includes(ex)?selectedExtras=selectedExtras.filter(x=>x!==ex):selectedExtras.push(ex);updateTotal()}
function updateTotal(){
let t=0
if(selectedPizza)t+=selectedPizza.price
if(selectedSize)t+=selectedSize.add
selectedExtras.forEach(x=>t+=x.price)
document.getElementById("totalPrice").innerText=`×¡×”×´×›: ${t} â‚ª`
}
function addToCart(){
if(!selectedPizza||!selectedSize)return Swal.fire('×©×’×™××”','×‘×—×¨ ×¤×™×¦×” ×•×’×•×“×œ','error')
let price=selectedPizza.price+selectedSize.add+selectedExtras.reduce((a,e)=>a+e.price,0)
cart.push({pizza:selectedPizza.name,size:selectedSize.name,extras:selectedExtras.map(e=>e.name),price})
updateCart()
selectedPizza=selectedSize=null
selectedExtras=[]
document.querySelectorAll("input").forEach(i=>i.checked=false)
updateTotal()
}
function updateCart(){
document.getElementById("cartList").innerHTML=cart.map((o,i)=>`<div class="orderItem"><p>ğŸ• ${o.pizza} ${o.size}</p><p>(+${o.extras.join(", ")})</p><p>â‚ª${o.price}</p><button onclick="removeCart(${i})">ğŸ—‘ï¸</button></div>`).join('')
}
function removeCart(i){cart.splice(i,1);updateCart()}
function confirmCart(){
if(!cart.length)return Swal.fire('×©×’×™××”','×”×¢×’×œ×” ×¨×™×§×”','error')
let total=cart.reduce((a,o)=>a+o.price,0)
let order={num:orderNumber++,items:cart.slice(),total:`${total} â‚ª`,customer:currentUser.username,userId:currentUser.id,date:new Date().toISOString()}
orderHistory.push(order)
orders.push(order)
localStorage.setItem('pizzaOrders',JSON.stringify(orders))
updateOrderHistory()
cart=[]
updateCart()
if(isStaff)updateStaffStats()
Swal.fire('×‘×•×¦×¢','×”×”×–×× ×” ×‘×•×¦×¢×” ×‘×”×¦×œ×—×”','success')
}
function updateOrderHistory(){
let userOrders=orderHistory.filter(o=>!isStaff||(isStaff&&currentUser.isAdmin)||o.userId===currentUser.id)
document.getElementById("orderHistory").innerHTML=userOrders.map((o,i)=>`<div class="orderItem"><p>××¡×³ ${o.num} - ğŸ‘¤ ${o.customer} - ${new Date(o.date).toLocaleString('he-IL')}</p>`+o.items.map(it=>`<p>ğŸ• ${it.pizza} ${it.size} (${it.extras.join(", ")}) â€“ â‚ª${it.price}</p>`).join('')+`<p>×¡×”×´×›: ${o.total}</p>`+((isStaff&&currentUser.isAdmin)?`<button onclick="deleteOrder(${i})">ğŸ—‘ï¸ ××—×§</button>`:'')+`</div>`).join('')
}
function updateStaffStats(){
document.getElementById("statCount").innerText=orderHistory.length
document.getElementById("statTotal").innerText=orderHistory.reduce((a,o)=>a+parseInt(o.total),0)+' â‚ª'
}
function deleteOrder(i){
orderHistory.splice(i,1)
orders.splice(i,1)
localStorage.setItem('pizzaOrders',JSON.stringify(orders))
updateOrderHistory()
updateStaffStats()
}
function staffLogin(){
if(currentUser&&currentUser.isAdmin){
isStaff=true
document.getElementById("staffPanel").style.display='block'
updateStaffStats()
updateOrderHistory()
return
}
Swal.fire({title:"×›× ×™×¡×ª ×¦×•×•×ª",html:'<input id="staffUser" class="swal2-input" placeholder="×©× ××©×ª××©"><input id="staffPass" type="password" class="swal2-input" placeholder="×¡×™×¡××”">',showCancelButton:true,confirmButtonText:"×”×ª×—×‘×¨",cancelButtonText:"×‘×™×˜×•×œ",preConfirm:()=>{
const user=document.getElementById('staffUser').value
const pass=document.getElementById('staffPass').value
return{user,pass}
}}).then(r=>{
if(r.isConfirmed){
const admin=users.find(u=>u.username===r.value.user&&u.password===r.value.pass&&u.isAdmin)
if(admin){
currentUser=admin
isStaff=true
document.getElementById("staffPanel").style.display='block'
updateStaffStats()
updateOrderHistory()
Swal.fire('×”×¦×œ×—×”','×©×œ×•× ×¦×•×•×ª','success')
}else Swal.fire('×©×’×™××”','×¤×¨×˜×™× ×©×’×•×™×™× ××• ××™×Ÿ ×”×¨×©××•×ª','error')
}
})
}
function logoutStaff(){isStaff=false;document.getElementById("staffPanel").style.display='none';updateOrderHistory();}
function login(){
const username=document.getElementById('username').value
const password=document.getElementById('password').value
const user=users.find(u=>u.username===username&&u.password===password)
if(user){
currentUser=user
document.getElementById('loginPanel').style.display='none'
document.getElementById('shopPanel').style.display='block'
createLists()
liveClock()
updateOrderHistory()
}else Swal.fire('×©×’×™××”','×©× ××©×ª××© ××• ×¡×™×¡××” ×œ× × ×›×•× ×™×','error')
}
function showRegister(){
Swal.fire({title:"×”×¨×©××”",html:'<input id="regUser" class="swal2-input" placeholder="×©× ××©×ª××©"><input id="regPass" type="password" class="swal2-input" placeholder="×¡×™×¡××”"><input id="regName" class="swal2-input" placeholder="×©× ××œ×">',showCancelButton:true,confirmButtonText:"×”×¨×©×",cancelButtonText:"×‘×™×˜×•×œ",preConfirm:()=>{
const user=document.getElementById('regUser').value
const pass=document.getElementById('regPass').value
const name=document.getElementById('regName').value
return{user,pass,name}
}}).then(r=>{
if(r.isConfirmed){
if(users.some(u=>u.username===r.value.user))return Swal.fire('×©×’×™××”','×©× ××©×ª××© ×ª×¤×•×¡','error')
const newUser={id:Date.now(),username:r.value.user,password:r.value.pass,name:r.value.name,isAdmin:false}
users.push(newUser)
localStorage.setItem('pizzaUsers',JSON.stringify(users))
Swal.fire('×”×¦×œ×—×”','×”×¨×©××” ×‘×•×¦×¢×”','success')
}
})
}
function liveClock(){setInterval(()=>{document.getElementById("clock").innerText=new Date().toLocaleTimeString('he-IL',{hour:'2-digit',minute:'2-digit',second:'2-digit'})},1000)}
if(users.length===0){
const adminUser={id:1,username:'admin',password:'admin123',name:'×× ×”×œ ××¢×¨×›×ª',isAdmin:true}
users.push(adminUser)
localStorage.setItem('pizzaUsers',JSON.stringify(users))
}
init()
</script>
