<script>
const pizzas=[{name:"××¨×’×¨×™×˜×”",price:36},{name:"×‘×¦×œ",price:46},{name:"×˜×‘×¢×•× ×™×ª",price:42}];
const sizes=[{name:"×§×˜×Ÿ",add:0},{name:"×‘×™× ×•× ×™",add:12},{name:"×’×“×•×œ",add:22}];
const extras=[{name:"×’×‘×™× ×” × ×•×¡×¤×ª",price:5},{name:"×–×™×ª×™×",price:4},{name:"×¤×˜×¨×™×•×ª",price:6},{name:"×‘×¦×œ",price:3},{name:"×¢×’×‘× ×™×•×ª",price:4},{name:"×©×•× ×§×•× ×¤×™",price:5}];
let selectedPizza=null,selectedSize=null,selectedExtras=[],orderHistory=[];
function createLists(){let pList="",sList="",eList="";
pizzas.forEach((p,i)=>{pList+=`<div class="card"><input type="radio" name="pizza" value="${i}" onchange="selectPizza(${i})">${p.name}<br>${p.price} â‚ª</div>`});
sizes.forEach((s,i)=>{sList+=`<div class="card"><input type="radio" name="size" value="${i}" onchange="selectSize(${i})">${s.name}<br>${s.add>0?`(+${s.add} â‚ª)`:""}</div>`});
extras.forEach((e,i)=>{eList+=`<div class="card"><input type="checkbox" value="${i}" onchange="toggleExtra(${i})">${e.name}<br>(+${e.price} â‚ª)</div>`});
document.getElementById("pizzaList").innerHTML=pList;
document.getElementById("sizeList").innerHTML=sList;
document.getElementById("extrasList").innerHTML=eList
}
function selectPizza(i){selectedPizza=pizzas[i];updateTotal()}
function selectSize(i){selectedSize=sizes[i];updateTotal()}
function toggleExtra(i){const ex=extras[i];if(selectedExtras.includes(ex)){selectedExtras=selectedExtras.filter(e=>e!==ex)}else{selectedExtras.push(ex)}updateTotal()}
function updateTotal(){let total=0;if(selectedPizza)total+=selectedPizza.price;if(selectedSize)total+=selectedSize.add;selectedExtras.forEach(e=>total+=e.price);document.getElementById("totalPrice").innerText=`×¡×”×´×›: ${total} â‚ª`}
function confirmOrder(){if(!selectedPizza||!selectedSize){Swal.fire({icon:"error",title:"×—×¡×¨ ×‘×—×™×¨×”",text:"×™×© ×œ×‘×—×•×¨ ×¤×™×¦×” ×•×’×•×“×œ"})}else{let details=`<p>ğŸ• ${selectedPizza.name}</p><p> ${selectedSize.name}</p>`;if(selectedExtras.length>0){details+=`<p> ×ª×•×¡×¤×•×ª:</p><ul>`;selectedExtras.forEach(e=>{details+=`<li>${e.name}</li>`});details+=`</ul>`}details+=`<p>${document.getElementById("totalPrice").innerText}</p>`;
Swal.fire({title:"×”×–×× ×” ×‘×•×¦×¢×”!",html:details,icon:"success"});orderHistory.push({pizza:selectedPizza.name,size:selectedSize.name,extras:selectedExtras.map(e=>e.name),total:document.getElementById("totalPrice").innerText});updateHistory();selectedPizza=null;selectedSize=null;selectedExtras=[];document.querySelectorAll("input").forEach(i=>i.checked=false);updateTotal()}}
function updateHistory(){let html="";orderHistory.forEach(o=>{html+=`<div class="orderItem"><p>ğŸ• ${o.pizza}</p><p> ${o.size}</p>`;if(o.extras.length>0){html+=`<p> ${o.extras.join(", ")}</p>`}html+=`<p>${o.total}</p></div>`});document.getElementById("orderHistory").innerHTML=html}
createLists()
</script>
